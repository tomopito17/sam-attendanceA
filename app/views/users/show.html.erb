<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <ul>
        <%= link_to "勤怠の登録をする", attendances_path, class: "nav-link" %> 
      </ul>
    </section>
  </aside>
</div>

<table class="table">
    <thead>
      <!-- セルに背景色を変更 -->
        <tr class="active">
            <th>名前</th>
            <th>メールアドレス</th>
            <th>所属</th>
            <th>社員番号</th>
        </tr>
    </thead>
    <tbody>
        <!-- 行全体をブルーに -->
        <tr class="info">
            <td><%= @user.name %></td>
            <td><%= @user.email %></td>
            <td><%= @user.role %></td>
            <td><%= @user.employee_number %></td>
        </tr>
　　　<thead>
        <tr class="active">
            <th>カードID</th>
            <th>指定勤務開始時間</th>
            <th>指定勤務終了時間</th>
            <th>基本勤務時間</th>
        </tr>
    </thead>
        <tr>
            <!-- セルに背景色を変更 -->
            <td class="info"><%= @user.card_id %></td>
            <td class="info"><%= time_format(@user.start_attendance_time)%></td>
            <td class="info"><%= time_format(@user.end_attendance_time) %></td>
            <td class="info"><%= time_format(@user.base_attendance_time) %></td>
        </tr>
    </tbody>
</table>